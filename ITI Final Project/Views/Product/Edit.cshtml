@model Product

<div class="d-flex justify-content-center">
    <h2>Edit Product</h2>
</div>

<br />
<br />
<br />

<form asp-action="Edit">

    <!-- Hidden field to maintain ProductId -->
    <input type="hidden" asp-for="ProductId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mt-5">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mt-5">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mt-5">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-5">
        <label asp-for="Quantitiy" class="form-label"></label>
        <input asp-for="Quantitiy" class="form-control" />
        <span asp-validation-for="Quantitiy" class="text-danger"></span>
    </div>

    <div class="form-group mt-5">
        <label asp-for="ImagePath" class="form-label">Select Image</label>
        <select asp-for="ImagePath" class="form-control" asp-items="ViewBag.Images">
            <option value="">-- Select Image --</option>
        </select>
        <span asp-validation-for="ImagePath" class="text-danger"></span>

        <!-- Display current image -->
        <div class="mt-3">
            <label>Current Image:</label>
            <img src="@Model.ImagePath" alt="Product Image" style="max-width: 150px;" />
        </div>
    </div>

    <div class="form-group mt-5">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag._Categorys" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mt-5 d-flex justify-content-center">
        <input type="submit" value="Save Changes" class="btn btn-success mx-3" />
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mx-3">Back</a>
    </div>

</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}