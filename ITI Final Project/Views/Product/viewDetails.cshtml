@model Product

<div class="d-flex justify-content-center">
    <h2>Product Details</h2>
</div>

<br />
<br />
<br />


<div class="card" style="width: 25rem;">
    <div class="card-body">
        <h5 class="card-title">Product Name: @Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Product Id: @Model.ProductId</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Age: @Model.Price</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Description: @Model.Description</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Quantitiy: @Model.Quantitiy</h6>
        <img src="@Model.ImagePath" alt="@Model.Title" style="max-width: 150px; max-height: 150px;" />
        <h6 class="card-subtitle mb-2 text-muted">Category Name: @Model.Category.Name</h6>
        <h6 class="card-subtitle mb-2 text-muted">Category Description: @Model.Category.Description</h6>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-4">Back</a>
    </div>
</div>
