@{
    Layout = "_Layout1";
}
@model IEnumerable<Category>

<div class="d-flex justify-content-center">
    <h2>Categories Portal</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Discription</th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="~/Category/ViewDetails/@item.CategoryId" class="btn btn-primary mx-2">View</a>
                    <a href="~/Category/Edit/@item.CategoryId" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Category/Delete/@item.CategoryId" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Category/Create" class="btn btn-success">Add Category</a>
    </tfoot>
</table>